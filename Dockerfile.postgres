FROM postgres:latest

ARG POSTGRESDB_USER
ARG POSTGRESDB_ROOT_PASSWORD
ARG POSTGRESDB_DATABASE
ARG POSTGRESDB_HOST
ARG POSTGRESDB_DOCKER_PORT
ARG POSTGRESDB_LOCAL_PORT

ENV DB_USER=${POSTGRESDB_USER}
ENV DB_PASSWORD=${POSTGRESDB_ROOT_PASSWORD}
ENV DB_DATABASE=${POSTGRESDB_DATABASE}
ENV DB_HOST=${POSTGRESDB_HOST}
ENV DB_PORT=${POSTGRESDB_PORT}

COPY ./src/config/init.sql /docker-entrypoint-initdb.d/